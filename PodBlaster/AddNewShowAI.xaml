<ContentDialog
    x:Class="PodBlaster.AddNewShowAI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PodBlaster"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add Show with AI"
    PrimaryButtonText="Add"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    x:Name="ShowAIDialog"
    >

    <Grid Margin="0,0,0,-16" >
        <TextBox PlaceholderText="Describe the Show" x:Name="NewFeedName" Margin="0,0,0,256"/>

        <TextBox Margin="0,77,-1,180" PlaceholderText="Confirm RSS feed" x:Name="NewRSSName" />

        <Image HorizontalAlignment="Left" Height="55" Width="55" Margin="0,113,0,0" VerticalAlignment="Top"  x:Name="ShowIcon"/>
        
            <TextBlock HorizontalAlignment="Left" Margin="60,113,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" x:Name="FeedDescription" Width="210" Height="161" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollMode="Auto"/>
        

        <Button 
HorizontalAlignment="Center"
Height="36" Width="88"
Content="Ask AI"
FontSize="14px"
x:Name="ContentBtn"
Click="ContentBtn_Click_AI" Margin="0,37,0,0" VerticalAlignment="Top" />
    </Grid>
</ContentDialog>
